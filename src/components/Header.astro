---
import { IMAGE_URL } from "@/consts";
import BotonesContacto from "./BotonesContacto.astro";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<header id={i18n.SECTION_NAVBAR.HOME}>
  <article>
    <img src={`${IMAGE_URL}/randy.webp`} alt="Foto de Randy Ochoa" />
    <BotonesContacto clase="botones-dos" />
  </article>

  <div class="informacion">
    <h1>
      Randy Ochoa Nu√±ez
      <span> Frontend Developer</span>
    </h1>

    <p set:html={i18n.SECTION_HEADER.PARAGRAPH_1} />
    <p set:html={i18n.SECTION_HEADER.PARAGRAPH_2} />
  </div>
</header>

<style>
  header {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 85vh;
    display: grid;
    grid-template-columns: 2fr 3fr;
    gap: 24px;
    padding-top: 15vh;

    @media (width < 600px) {
      grid-template-columns: 1fr;
    }

    & > article {
      display: grid;
      border: 3px solid var(--color-primario);
      border-radius: 12px;
      overflow: hidden;

      @media (width < 600px) {
        max-width: 400px;
        place-self: center;
      }

      img {
        width: 100%;
        aspect-ratio: 1 / 1;
        object-fit: cover;
        object-position: top;
      }

      article {
        padding: 20px;
      }
    }

    .informacion {
      h1 {
        display: flex;
        flex-direction: column;
        font-size: 40px;
        font-weight: bold;

        @media (width < 700px) {
          font-size: 32px;
        }

        span {
          font-size: 32px;

          @media (width < 700px) {
            font-size: 24px;
          }
        }
      }

      p {
        line-height: 1.5;

        strong {
          color: var(--color-primario);
        }
      }
    }
  }
</style>
