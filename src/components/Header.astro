---
import IconGithub from "@/Icons/IconGithub.astro";
import IconLinkedin from "@/Icons/IconLinkedin.astro";
import IconFile from "@/Icons/IconFile.astro";
import { IMAGE_URL } from "@/consts";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<header id={i18n.SECTION_NAVBAR.HOME}>
  <section>
    <h1>
      Randy Ochoa Nu√±ez
      <span> Frontend Developer</span>
    </h1>

    <div class="botones boton-uno">
      <a target="_blank" href="https://github.com/SoyRandy708">
        <IconGithub width="25" height="25" />
        {i18n.SECTION_BUTTONS.GITHUB}
      </a>

      <a target="_blank" href="https://www.linkedin.com/in/randy-ochoa/">
        <IconLinkedin width="30" height="30" />
        {i18n.SECTION_BUTTONS.LINKEDIN}
      </a>

      <a
        target="_blank"
        download
        href=`${IMAGE_URL}/CV_Randy-Ochoa_Frontend-Developer.pdf`
      >
        <IconFile width="30" height="30" />
        {i18n.SECTION_BUTTONS.CV}
      </a>
    </div>
  </section>
</header>

<style>
  header {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
  }

  section {
    display: flex;
    flex-direction: column;
    gap: 24px;

    h1 {
      display: flex;
      flex-direction: column;
      font-size: 40px;
      font-weight: bold;

      span {
        font-size: 30px;
      }
    }
  }

  .botones {
    display: flex;
    gap: 12px;
    flex-direction: column;
    justify-content: space-between;

    @media (width > 600px) {
      flex-direction: row;
    }
  }
</style>
