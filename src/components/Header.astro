---
import BotonesContacto from "./BotonesContacto.astro";
import Tecnologias from "./Tecnologias.astro";
import { IMAGE_URL } from "@/consts";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<section id={i18n.SECTION_NAVBAR.HOME} class="section-active">
  <header>
    <article>
      <div class="img-container">
        <img src={`${IMAGE_URL}/randy.webp`} alt="Foto de Randy Ochoa" />

        <a
          target="_blank"
          aria-label="Visit my LinkedIn"
          href="https://www.linkedin.com/in/randy-ochoa/"
        >
          <span></span>
          {i18n.SECTION_HEADER.WORK_MESSAGE}
        </a>
      </div>

      <BotonesContacto clase="botones-dos" />
    </article>

    <div class="informacion">
      <h1>
        Randy Ochoa Nu√±ez
        <span> Frontend Developer</span>
      </h1>

      <p set:html={i18n.SECTION_HEADER.PARAGRAPH_1} />
      <p set:html={i18n.SECTION_HEADER.PARAGRAPH_2} />
    </div>
  </header>

  <Tecnologias />
</section>

<style>
  header {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 85vh;
    display: grid;
    grid-template-columns: 2fr 3fr;
    gap: 24px;
    padding-top: 15vh;

    @media (width < 600px) {
      grid-template-columns: 1fr;
    }

    & > article {
      display: grid;
      border: 3px solid var(--color-primario);
      border-radius: 12px;
      overflow: hidden;
      min-width: 250px;

      @media (width < 600px) {
        max-width: 400px;
        place-self: center;
      }

      .img-container {
        position: relative;

        a {
          display: flex;
          gap: 8px;
          align-items: center;
          position: absolute;
          background-color: var(--background-color);
          border: 2px solid var(--color-primario);
          border-radius: 0 10px 10px 0;
          padding: 8px;
          bottom: -12px;
          left: -2px;
          margin: 0;

          span {
            display: block;
            background-color: var(--color-primario);
            width: 20px;
            height: 20px;
            border-radius: 50%;
            animation: crecer 1.5s forwards infinite;
            animation-fill-mode: backwards;
          }
        }

        img {
          position: relative;
          width: 100%;
          height: 100%;
          aspect-ratio: 1 / 1;
          object-fit: cover;
          object-position: top;
        }
      }

      article {
        padding: 20px;
      }
    }

    .informacion {
      h1 {
        display: flex;
        flex-direction: column;
        font-size: 40px;
        font-weight: bold;

        @media (width < 700px) {
          font-size: 32px;
        }

        span {
          font-size: 32px;

          @media (width < 700px) {
            font-size: 24px;
          }
        }
      }

      p {
        line-height: 1.5;

        strong {
          color: var(--color-primario);
        }
      }
    }
  }
</style>
