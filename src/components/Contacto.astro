---
import IconContact from "@/Icons/IconContact.astro";
import BotonesContacto from "./BotonesContacto.astro";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<footer id={i18n.SECTION_NAVBAR.CONTACT}>
  <article>
    <h2>
      <IconContact width="40" height="40" />
      {i18n.SECTION_CONTACT.TITLE}
    </h2>

    <div class="informacion">
      <p>
        {i18n.SECTION_CONTACT.TEXT}
      </p>

      <BotonesContacto clase="botones-dos" />
    </div>
  </article>
</footer>

<style>
  * {
    color: var(--background-color);
  }

  footer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 100vh;
  }

  article {
    background-color: var(--color-primario);
    padding: 20px;
    border-radius: 20px;

    .informacion {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 50px;

      @media (width < 600px) {
        grid-template-columns: 1fr;
        gap: 10px;
      }

      p {
        font-weight: 500;
        line-height: 1.5;
      }
    }
  }

  h2 {
    color: var(--background-color);

    path {
      color: var(--background-color);
    }
  }
</style>
