---
import IconContact from "@/Icons/IconContact.astro";
import IconFile from "@/Icons/IconFile.astro";
import IconGithub from "@/Icons/IconGithub.astro";
import IconLinkedin from "@/Icons/IconLinkedin.astro";
import { IMAGE_URL } from "@/consts";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<footer id={i18n.SECTION_NAVBAR.CONTACT}>
  <article>
    <h2>
      <IconContact width="40" height="40" />
      {i18n.SECTION_CONTACT.TITLE}
    </h2>

    <div>
      <p>
        {i18n.SECTION_CONTACT.TEXT}
      </p>

      <div class="botones boton-uno">
        <a target="_blank" href="https://github.com/SoyRandy708">
          <IconGithub width="25" height="25" />
          {i18n.SECTION_BUTTONS.GITHUB}
        </a>

        <a target="_blank" href="https://www.linkedin.com/in/randy-ochoa/">
          <IconLinkedin width="30" height="30" />
          {i18n.SECTION_BUTTONS.LINKEDIN}
        </a>

        <a
          target="_blank"
          download
          href=`${IMAGE_URL}/CV_Randy-Ochoa_Frontend-Developer.pdf`
        >
          <IconFile width="30" height="30" />
          {i18n.SECTION_BUTTONS.CV}
        </a>
      </div>
    </div>
  </article>
</footer>

<style>
  * {
    color: var(--background-color);
  }

  footer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 100vh;
  }

  article {
    background-color: var(--color-primario);
    padding: 20px;
    border-radius: 20px;

    div {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 50px;

      p {
        font-weight: 500;
        line-height: 1.5;
      }
    }
  }

  h2 {
    color: var(--background-color);

    path {
      color: var(--background-color);
    }
  }

  .botones {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
</style>
