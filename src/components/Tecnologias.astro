---
import { TODAS_TECNOLOGIAS, TECNOLOGIAS_ICONOS } from "@/consts";
import IconTecnologias from "@/Icons/IconTecnologias.astro";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<section>
  <h2>
    <IconTecnologias width="40" height="40" />
    {i18n.SECTION_TECHNOLOGIES.TITLE}
  </h2>

  <div class="icons-container">
    {
      TODAS_TECNOLOGIAS.map((tecnologia) => {
        const Icon = TECNOLOGIAS_ICONOS[tecnologia];

        return (
          <div class="icon-container">
            <Icon class="icon" width="75" height="75" />
            <span> {tecnologia} </span>
          </div>
        );
      })
    }
  </div>
</section>

<style>
  section {
    padding: 100px 0;
  }

  .icons-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
  }

  .icon-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    padding: 4px;
    border-radius: 8px;
    background-color: var(--texto-color);
    transition: transform 0.3s ease;

    &:hover {
      transform: scale(1.05);
    }

    span {
      font-weight: 700;
      color: var(--background-color);
    }
  }
</style>
